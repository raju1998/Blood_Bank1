<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/boder"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Blood Group : "
        android:textSize="20sp"
        android:id="@+id/blood"
        android:layout_marginStart="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/blood"
        android:textSize="20sp"
        android:id="@+id/blood_group"
        android:layout_toEndOf="@id/blood"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name            : "
        android:textSize="20sp"
        android:layout_below="@id/blood_group"

        android:layout_marginTop="5dp"

        android:id="@+id/name"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_name"
        android:textSize="20sp"
        android:layout_toRightOf="@id/name"
        android:layout_below="@id/blood_group"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:id="@+id/mobile"
        android:text="Mobile No.    : "
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_toRightOf="@id/mobile"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:id="@+id/mobile_number"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/phonicon"
        android:layout_below="@id/text_name"
        android:layout_toRightOf="@id/mobile_number"
        android:layout_marginLeft="150dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@id/mobile_number" />


</RelativeLayout>