<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormFill"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text13"
        android:text="Name  "
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/toolbar_form"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text13"
        android:id="@+id/take_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:background="@drawable/design1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text14"
        android:text="Blood Group "
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/take_name"

        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/text14"
        android:padding="0dp"
        android:id="@+id/take_blood"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/design1"
        >


    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text15"
        android:text="Mobile Number "
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
    android:layout_below="@id/take_blood"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text15"
        android:id="@+id/take_number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"

        android:padding="10dp"
        android:background="@drawable/design1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text16"
        android:text="City "
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/take_number"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text16"
        android:id="@+id/take_city"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"

        android:padding="10dp"
        android:background="@drawable/design1"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/take_city"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:id="@+id/submitDetails"
        android:background="@drawable/design_button"
        />
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar_form"

        >
    </android.support.v7.widget.Toolbar>

</RelativeLayout>